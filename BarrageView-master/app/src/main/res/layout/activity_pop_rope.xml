<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
   android:background="@drawable/ropebackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/imageButton7" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/expression1"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_alignTop="@+id/imageButton6"
            android:background="@drawable/expression2"
            />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageButton4"
            android:layout_alignStart="@+id/imageButton4"
            android:layout_alignTop="@+id/imageButton5"
            android:background="@drawable/expression3"
            />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/imageButton4"
            android:layout_toStartOf="@+id/imageButton4"
            android:background="@drawable/expression4"
            />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="27dp"
            android:layout_toLeftOf="@+id/imageButton5"
            android:layout_toStartOf="@+id/imageButton5"
            android:background="@drawable/expression5"
            />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView3"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"
            android:background="@drawable/fabu" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView4"
            android:layout_toLeftOf="@+id/imageButton7"
            android:layout_toStartOf="@+id/imageButton7"
            android:background="@drawable/share1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/imageButton4"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageButton4"
            android:text="   发  布"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/imageButton4"
            android:layout_toRightOf="@+id/imageButton4"
            android:text="   分  享"
            android:id="@+id/textView4" />
    </RelativeLayout>
</LinearLayout>
